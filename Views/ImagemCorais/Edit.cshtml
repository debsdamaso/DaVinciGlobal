@model DaVinciGlobal.Models.ImagemCoral

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Imagem de Coral</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ImagemCoralId" />
            <div class="form-group">
                <label asp-for="CaminhoImagem" class="control-label"></label>
                <input asp-for="CaminhoImagem" class="form-control" />
                <span asp-validation-for="CaminhoImagem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Localizacao" class="control-label"></label>
                <input asp-for="Localizacao" class="form-control" />
                <span asp-validation-for="Localizacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataEnvio" class="control-label"></label>
                <input asp-for="DataEnvio" class="form-control" />
                <span asp-validation-for="DataEnvio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EstadoCoral" class="control-label"></label>
                <input asp-for="EstadoCoral" class="form-control" />
                <span asp-validation-for="EstadoCoral" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UsuarioId" class="control-label"></label>
                <select asp-for="UsuarioId" class="form-control" asp-items="ViewBag.UsuarioId"></select>
                <span asp-validation-for="UsuarioId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
